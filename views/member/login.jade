extends ../common/layout

block content
  div(class='container')
    div(class='row')
      div(class='col-lg-12')
        h1=title
    p
      | Use your e-mail address and password to log in to the system.
    if flash.error
      div(class='alert alert-danger')
        span= flash.error
    div(class='row')
      div(class='col-lg-4')
        form(role='form', action='authenticate', method='post')
          div(class='form-group')
            label(for='email') Email address:
            input(type='email', class='form-control', name='email', id='emailInput', placeholder='user@example.com')
          div(class='form-group')
            label(for='password') Password:
            input(type='password', class='form-control', name='password', id='passwordInput', placeholder='password')
          button(type='submit', class='btn btn-default') Login
