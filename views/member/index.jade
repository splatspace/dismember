extends ../common/layout

block content
  div(class='container-fluid')
    div(class='row')
      div(class='col-lg-12')
        h2 #{member.name}
        h4 #{member.email} (<a href='#{uriPathPrefix}/member/logout'>logout</a>)
        if member.roles && member.roles.length > 0
          h6
            each role in member.roles
              span=ucfirst(role.name)
              |&nbsp;
    div(class='row')
      div(class='col-lg-12')
        h4 Membership
        ul
          li Since: #{member.membership_start.toLocaleDateString()}
          li Status: #{ucfirst(member.membership_status)}
          li Type: #{ucfirst(member.membership_type)}
